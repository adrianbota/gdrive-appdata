{
  "CLEAN_TASK": "clean",
  "CLEAN_SRC": [
    "dist/**/*",
    "docs/**/*",
    "!dist/.gitkeep",
    "!docs/.gitkeep"
  ],

  "JS_TASK": "js",
  "JS_SRC": "src/js/gdad.js",
  "JS_DEST": "docs/js/",
  "JS_ANY_SRC": "src/js/**/*.js",
  "JS_BUNDLE_OPTIONS": {
    "output": {
      "filename": "gdad.js"
    }
  },

  "CSS_TASK": "css",
  "CSS_SRC": "src/less/main.less",
  "CSS_DEST": "docs/css/",
  "CSS_ANY_SRC": "src/less/**/*.less",
  "CSS_AUTOPREFIX_OPTIONS": {
    "browsers": [
      "last 2 versions"
    ]
  },

  "HTML_TASK": "html",
  "HTML_SRC": "src/index.html",
  "HTML_DEST": "docs/",
  "HTML_ANY_SRC": "src/**/*.html",
  "HTML_INCLUDE_OPTIONS": {},
  "HTML_MIN_OPTIONS": {
    "caseSensitive": true,
    "collapseBooleanAttributes": true,
    "collapseWhitespace": true,
    "conservativeCollapse": true,
    "html5": true,
    "includeAutoGeneratedTags": true,
    "preventAttributesEscaping": true,
    "removeAttributeQuotes": true,
    "removeComments": true,
    "removeEmptyAttributes": true,
    "removeScriptTypeAttributes": true,
    "removeStyleLinkTypeAttributes": true,
    "useShortDoctype": true
  },

  "IMG_TASK": "img",
  "IMG_SRC": "src/img/**/*",
  "IMG_DEST": "docs/img/",

  "DIST_TASK": "dist",
  "DIST_SRC": [
    "docs/css/main.css",
    "docs/js/gdad.js"
  ],
  "DIST_DEST": "dist/",

  "MISC_TASK": "misc",
  "MISC_SRC": [
    "src/robots.txt",
    "src/favicon.*",
    "src/CNAME"
  ],
  "MISC_DEST": "docs/",

  "TEST_TASK": "test",
  "TEST_SRC": "test/**/*-spec.js",
  "TEST_SPEC_OPTIONS": {
    "console": true
  },

  "BUILD_TASK": "build",

  "DEV_TASK": "dev",
  "DEV_OPTIONS": {
    "server": "docs/"
  }
}
